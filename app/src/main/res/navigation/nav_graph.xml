    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_game">

    <fragment
        android:id="@+id/navigation_game"
        android:name="com.zybooks.cardmatch.CardGame"
        android:label="@string/game_button"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/navigation_color"
        android:name="com.zybooks.cardmatch.DifficultyFragment"
        android:label="@string/difficulty_button"
        tools:layout="@layout/fragment_difficulties" />

    <fragment
        android:id="@+id/navigation_help"
        android:name="com.zybooks.cardmatch.HelpFragment"
        android:label="@string/help_button"
        tools:layout="@layout/fragment_help" />
