    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_game">

    <fragment
        android:id="@+id/navigation_game"
        android:name="com.zybooks.cardmatch.GameFragment"
        android:label="@string/easy"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/navigation_difficulty"
        android:name="com.zybooks.cardmatch.MediumDifficulty"
        android:label="@string/medium"
        tools:layout="@layout/fragment_medium_difficulty" />

    <fragment
        android:id="@+id/navigation_help"
        android:name="com.zybooks.cardmatch.HardDifficulty"
        android:label="@string/hard"
        tools:layout="@layout/fragment_hard_difficulty" />
