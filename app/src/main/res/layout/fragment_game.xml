<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zybooks.cardmatch.MainActivity">

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_label"
        android:textSize="30sp"
        android:textColor="@color/dark_teal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp" />

    <GridLayout
        android:id="@+id/light_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:useDefaultMargins="true"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_margin="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
        <Button style="@style/Card"/>
    </GridLayout>

    <Button
        android:id="@+id/new_game_button"
        style="@style/GameOptionButton"
        android:layout_marginTop="40dp"
        android:layout_width="180dp"
        android:text="@string/new_game"
        android:textColor="@color/off_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/light_grid"
        android:background="@drawable/newgame_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>